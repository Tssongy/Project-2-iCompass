<% if logged_in? %>
    <h1>Your Dashboard</h1>

    <form action="/logout" method="POST">
        <input type="hidden" name="_method" value="delete">
        <button>Log out</button>
    </form>

    <h2>Hello <%= current_user()['first_name']%> </h3>
    <h2>Your class is <%= class_list[0]['class_name'] %></h3>

    <main>
        <% if role == 't'%>
            <section id='class-list'>
                <h1>Class List</h1>
                <ul>
                    <% class_list.each do |student| %>
                        <li>
                        <%= student['first_name'] %> <%= student['last_name'] %>
                        </li>
                    <% end %>
                </ul>
            </section>

            <section id='homework-list'>
                <h1>Homework</h1>
                <a href="/dashboard/<%= class_list[0]['class_name'] %>/new">Create Homework</a>

                <ul>
                    <% homework_list.each do |homework|%>
                        <li>
                            <button type="button" class="collapsible">
                                <%= homework['title'] %>
                            </button>
                            <div class="content">
                                <p><%= homework['description'] %></p>
                                <a href="/dashboard/<%= homework['id'] %>/edit">Edit</a>

                                <%# Delete Homework %>
                                <form action="/dashboard/<%= homework['id'] %>" method="POST">
                                    <input type="hidden" name="_method" value="delete">
                                    <button>delete</button>
                                </form>


                            </div>
                        </li>
                    <% end %>
                </ul>
            </section>


        <% elsif role == 's'%>
            <section id='outstanding-homework'>
                <h1>Outstanding Homework</h1>
                <ul>
                    <% homework_list.each do |homework|%>
                        <li>
                            <button type="button" class="collapsible">
                                <%= homework['title'] %>
                            </button>
                            <div class="content">
                                <p><%= homework['description'] %></p>
                                <form action="/submit" method="POST">
                                    <label for="">Answer: </label>
                                    <input type="text" name="answer">
                                </form>
                            </div>
                        </li>
                    <% end %>
                </ul>
            </section>

        <% end %>

    </main>

    
    
        

        

    
    

<% else %>

    <h1>Welcome to iCompass</h1>
    <a href="/users/t">I am a teacher</a>
    <a href="/users/s">I am a student</a>

<% end %>
