<% if logged_in? %>
    



    <main id="dashboard">
        <nav>
            <form action="/logout" method="POST">
                <input type="hidden" name="_method" value="delete">
                <button>Log out</button>
            </form>
            <h1>Hello <%= current_user()['first_name']%> </h1>
        </nav>
        

        <h2>Class Dashboard(<%= class_list[0]['class_name'] %>)</h1>
        <div class="cols">
            
            <% if role == 't'%>
                <section id='class-list'>
                    <h1>Class List</h1>
                    <ul>
                        <% class_list.each do |student| %>
                            <li>
                            <%= student['first_name'] %> <%= student['last_name'] %>
                            </li>
                        <% end %>
                    </ul>
                </section>

                <section id='homework-list'>
                    <h1>Homework</h1>
                    <a href="/dashboard/<%= class_list[0]['class_name'] %>/new">Create Homework</a>

                    <ul>
                        <% homework_list.each do |homework|%>
                            <li>
                                <button type="button" class="collapsible">
                                    <%= homework['title'] %>
                                </button>
                                <div class="content">
                                    <p><%= homework['description'] %></p>
                                    <a href="/dashboard/<%= homework['id'] %>/edit">Edit</a>
                                    <a href="/dashboard/<%= homework['id'] %>/mark">Mark</a>
                                    <%# Delete Homework %>
                                    <form action="/dashboard/<%= homework['id'] %>" method="POST">
                                        <input type="hidden" name="_method" value="delete">
                                        <button>delete</button>
                                    </form>


                                </div>
                            </li>
                        <% end %>
                    </ul>
                </section>


            <% elsif role == 's'%>
                <section id='outstanding-homework'>
                    <h1>Homework</h1>
                    <ul>
                        <% homework_list.each do |homework|%>
                            <li>
                                <button type="button" class="collapsible">
                                    <%= homework['title'] %>
                                </button>
                                <div class="content">
                                    <p><%= homework['description'] %></p>
                                    <% if has_submitted?(current_user()['id'], homework['id'])%>
                                        <% if has_been_marked?(current_user()['id'], homework['id'])%>
                                            <p>marked 
                                            <span>
                                                <%= display_mark(current_user()['id'], homework['id']) %>
                                            </span>
                                            </p>
                                        <% else %>
                                            <p>submitted</p>
                                        <% end %>
                                    <% else %>
                                        <form action="/dashboard/<%= homework['id'] %>&<%= session['user_id']%>/record" method="POST">
                                            <label for="">Answer: </label>
                                            <input type="text" name="answer">

                                            <button>submit</button>
                                        </form>
                                    <% end %>
                                    
                                </div>
                            </li>
                        <% end %>
                    </ul>
                </section>

            <% end %>
        </div>
    </main>

    
    
        

        

    
    

<% else %>
    
    <main id="select-user">
        <h1>Welcome to iCompass</h1>
        <section>
            <a href="/login/t">
                <button>
                I am a teacher
                </button>
            </a>
    
            <a href="/login/s">
                <button>
                    I am a student
                </button>
            </a>
        </section>
        
    </main>
    

<% end %>
